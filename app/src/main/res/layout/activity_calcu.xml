<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cecyt9.ipn.labo.Calcu">

    <EditText
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="53dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Resultado"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/uno"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:onClick="onClickUno"
        android:text="1"
        app:layout_constraintStart_toStartOf="@+id/texto"
        app:layout_constraintTop_toBottomOf="@+id/texto" />

    <Button
        android:id="@+id/dos"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:onClick="onClickDos"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/uno"
        app:layout_constraintTop_toTopOf="@+id/uno" />

    <Button
        android:id="@+id/tres"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:onClick="onClickTres"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/dos"
        app:layout_constraintTop_toTopOf="@+id/uno" />

    <Button
        android:id="@+id/cuatro"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickCuatro"
        android:text="4"
        app:layout_constraintStart_toStartOf="@+id/uno"
        app:layout_constraintTop_toBottomOf="@+id/uno" />

    <Button
        android:id="@+id/cinco"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickCinco"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/cuatro"
        app:layout_constraintTop_toBottomOf="@+id/dos" />

    <Button
        android:id="@+id/seis"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickSeis"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/cinco"
        app:layout_constraintTop_toBottomOf="@+id/tres" />

    <Button
        android:id="@+id/siete"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickSiete"
        android:text="7"
        app:layout_constraintStart_toStartOf="@+id/cuatro"
        app:layout_constraintTop_toBottomOf="@+id/cuatro" />

    <Button
        android:id="@+id/ocho"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickOcho"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/siete"
        app:layout_constraintTop_toBottomOf="@+id/cinco" />

    <Button
        android:id="@+id/nueve"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickNueve"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/ocho"
        app:layout_constraintTop_toBottomOf="@+id/seis" />

    <Button
        android:id="@+id/cero"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickCero"
        android:text="0"
        app:layout_constraintStart_toStartOf="@+id/siete"
        app:layout_constraintTop_toBottomOf="@+id/siete" />

    <Button
        android:id="@+id/punto"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickPunto"
        android:text="."
        app:layout_constraintStart_toEndOf="@+id/cero"
        app:layout_constraintTop_toBottomOf="@+id/ocho" />

    <Button
        android:id="@+id/ce"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:onClick="onClickCE"
        android:text="CE"
        app:layout_constraintStart_toEndOf="@+id/texto"
        app:layout_constraintTop_toTopOf="@+id/texto" />

    <Button
        android:id="@+id/mas"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:onClick="onClickMas"
        android:layout_marginStart="28dp"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/tres"
        app:layout_constraintTop_toTopOf="@+id/tres" />

    <Button
        android:id="@+id/menos"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:onClick="onClickMenos"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/mas"
        app:layout_constraintTop_toTopOf="@+id/mas" />

    <Button
        android:id="@+id/por"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:onClick="onClickPor"
        android:text="*"
        app:layout_constraintStart_toStartOf="@+id/mas"
        app:layout_constraintTop_toBottomOf="@+id/mas" />

    <Button
        android:id="@+id/entre"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:onClick="onClickEntre"
        android:text="/"
        app:layout_constraintStart_toEndOf="@+id/por"
        app:layout_constraintTop_toBottomOf="@+id/menos" />

    <Button
        android:id="@+id/igual"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:onClick="onClickIgual"
        android:text="="
        app:layout_constraintStart_toStartOf="@+id/por"
        app:layout_constraintTop_toBottomOf="@+id/por" />

    <Button
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickEnviar"
        android:text="ENVIAR A CORREO"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/punto"
        app:layout_constraintTop_toBottomOf="@+id/igual" />
</android.support.constraint.ConstraintLayout>
